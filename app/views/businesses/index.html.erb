<p>Index</p>

<%= form_tag(businesses_path, :method => "get", id: "business-search") do %> 
  <%= select_tag :category, options_from_collection_for_select(@category, "id", "name") %>
  <%= submit_tag :Submit %>
<% end %>

<% @businesses.each do |business| %>
  <p><%= link_to business.name, business %></p>
  <p><%= "Address: #{business.address}" %><p></br>

  <%= link_to image_tag("http://maps.googleapis.com/maps/api/streetview?size=400x200&heading=#{business.heading}&pitch=0&pano=#{business.pano}&sensor=false"), "https://maps.google.com/maps?layer=c&panoid=#{business.pano}&cbp=#{business.cbp}&source=embed&output=svembedmfe" %>

<% end %>
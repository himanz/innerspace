<p>Index</p>

<%= form_tag(businesses_path, :method => "get", id: "business-search") do %> 
  <%= select_tag :category, options_from_collection_for_select(@category, "id", "name") %>
  <%= submit_tag :Submit %>
<% end %>

<!-- <div class="row"> -->
	<% @businesses.each do |business| %>
    <div class="large-4 columns">
    	<%= link_to image_tag(business.streetview_image), business, id: "#{business.name}", :class => "streetview-image" %>
	    <p><%= business.name %></p>
	    <p><%= "Address: #{business.address}" %><p></br>
	  </div>
  <% end %>
  
</div>  

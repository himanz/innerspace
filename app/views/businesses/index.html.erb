<div class="title">
  <h1>Welcome to Scouting it!</h1>
  <h2>Visit the world, at home</h2>
</div>

<div id="search-container">
  <div id="search"> 
  <%= form_tag(businesses_path, :method => "get", id: "business-search") do %> 
    <p>Filter by</p>
    <%= select_tag :category, options_from_collection_for_select(@category, "id", "name"), {:prompt => "Category"} %>
    <%= select_tag :country, {:prompt => "Country"} %>
    <%= submit_tag :Submit, :class => "button tiny" %>
  <% end %>
  </div>
</div>

<% @businesses.each do |business| %>
  <div class="large-4 columns box">
  	<%= link_to image_tag(business.image.url(:medium)), business, id: "#{business.name}", :class => "streetview-image" %>
    <p><%= business.name %></p>
    <p><%= business.formatted_address %><p>
    <p><%= business.country %></p></br>

  </div>
<% end %>

<%= paginate @businesses %>  

<div class="title">
  <h1>Welcome to Scouting It!</h1>
  <h2>Visit the locations around the world, at home</h2>
</div>

<div id="search-container">
  <div id="search-content">
  <div id="search"> 
    <%= form_tag(businesses_path, :method => "get", id: "business-search") do %> 
      <h4>Filter by</h4>
      <%= label_tag :category %>
      <%= select_tag :country, options_from_collection_for_select(Business.unique_by_country, "country", "country"), :id => "country-select" %>
      <%= select_tag :category, options_from_collection_for_select(@category, "id", "name"), { :prompt => "All", :id => "category-select" }%>
      <%= submit_tag :Submit, :class => "button tiny", :id => "search-submit" %>
    <% end %>
  </div>
</div>
</div>

<% @businesses.each do |business| %>
  <div class="large-4 columns box">
  	<%= link_to image_tag(business.image.url(:medium)), business, id: "#{business.name}", :class => "streetview-image" %>
    <p><%= business.name %></p>
    <p><%= business.formatted_address %><p>
    <p><%= business.country %></p></br>

  </div>
<% end %>

<%= paginate @businesses %>  

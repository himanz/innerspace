<h2>Recently Added Businesses</h2>

<% @businesses.each do | business| %>
  <div class="large-4 columns">
  	<%= link_to image_tag(business.streetview_image), business, id: "#{business.name}", :class => "streetview-image" %>
    <p><%= business.name %></p>
    <p><%= "Address: #{business.address}" %><p>
    <p><%= "Date added: #{business.created_at.strftime("%d %b %Y")}" %><p>
  </div>
<% end %>
